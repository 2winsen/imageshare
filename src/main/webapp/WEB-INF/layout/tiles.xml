<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<definition name="defaultPage" template="/WEB-INF/layout/default.jsp">
		<put-attribute name="header"
			value="/WEB-INF/views/layout/header.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer"
			value="/WEB-INF/views/layout/footer.jsp" />
	</definition>

	<definition name="uploadPage" extends="defaultPage">
		<put-attribute name="body"
			value="/WEB-INF/views/body/upload.jsp" />
	</definition>

	<definition name="imagePage" extends="defaultPage">
		<put-attribute name="body"
			value="/WEB-INF/views/body/image.jsp" />
	</definition>

	<definition name="maintenanceAuthPage" extends="defaultPage">
		<put-attribute name="body"
			value="/WEB-INF/views/body/maintenance-auth.jsp" />
	</definition>
	
	<definition name="maintenancePage" extends="defaultPage">
		<put-attribute name="body"
			value="/WEB-INF/views/body/maintenance.jsp" />
	</definition>

	<definition name="termsPage" extends="defaultPage">
		<put-attribute name="body"
			value="/WEB-INF/views/body/terms.jsp" />
	</definition>

	<definition name="resourceNotFoundPage" extends="defaultPage">
		<put-attribute name="body"
			value="/WEB-INF/views/body/resourceNotFound.jsp" />
	</definition>

	<definition name="uncaughtExceptionPage" extends="defaultPage">
		<put-attribute name="body"
			value="/WEB-INF/views/body/uncaughtException.jsp" />
	</definition>

</tiles-definitions>
